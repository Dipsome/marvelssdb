{% import "AppBundle::macros.html.twig" as macros %}
<div style="width: 360px; padding : 2px; padding-top : 10px; border : solid #dfdfdf 1px; background-color: rgba(255, 255, 255, 0.4)">
	<div style="display: flex;">
		<div>
		<span class="deck-list-investigator-image card-thumbnail-2x card-thumbnail-investigator" title="{{ investigator.name }}" style="background-image:url({{ asset('/bundles/cards/'~investigator.code~'.png') }})"></span>
		</div>
		<div style="height : 119px; padding-left : 0.2em;">
			<h4 style="padding : 2px; margin: 0;">{{ macros.card_name_no_link(investigator) }}</h4>
			<ul style="margin-left : 25px; padding-left: 0px;">
				<li>Deck Size: 40-50</li>
				<li>15 Hero cards</li>
				{% if investigator.code == '44001a'%}<li><b>You should definitely pick me</b></li>{% endif %}
			</ul>
		</div>
	</div>
	<div>
	{% if investigator.code == '44001a'%}
	<p><button style="background-image: linear-gradient(90deg, rgba(255,0,0,1) 0%, rgba(255,154,0,1) 10%, rgba(208,222,33,1) 20%, rgba(79,220,74,1) 30%, rgba(63,218,216,1) 40%, rgba(47,201,226,1) 50%, rgba(28,127,238,1) 60%, rgba(95,21,242,1) 70%, rgba(186,12,248,1) 80%, rgba(251,7,217,1) 90%, rgba(255,0,0,1) 100%);"name="investigator" value="{{ investigator.code }}" type="submit" class="btn btn-primary btn-block">Create {{investigator.name}} Deck</button></p>
	{% else %}
	<p><button name="investigator" value="{{ investigator.code }}" type="submit" class="btn btn-primary btn-block">Create {{investigator.name}} Deck</button></p>
	{% endif %}
	</div>
</div>
